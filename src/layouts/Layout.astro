---
import { Sprite } from 'astro-icon'
import Footer from '~/components/Footer.astro'
import Header from '~/components/Header.astro'

export interface Props {
  title?: string
}

const { title } = Astro.props as Props

const baseTitle = 'Adrian LÃ³pez Portfolio'
const combinedTitle = title ? `${title} | ${baseTitle}` : baseTitle
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{combinedTitle}</title>
  </head>
  <body>
    <Sprite.Provider>
      <div
        class="bg-slate-900 min-h-screen text-slate-300 flex flex-col items-center gap-4"
      >
        <Header />
        <main class="container">
          <slot />
        </main>
        <Footer />
      </div>
    </Sprite.Provider>
    <style is:global>
      ::-webkit-scrollbar {
        @apply w-3;
      }

      ::-webkit-scrollbar-thumb {
        @apply rounded-sm bg-slate-800 hover:bg-slate-700;
      }

      ::-webkit-scrollbar-track {
        @apply bg-slate-900;
      }

      pre.astro-code {
        @apply rounded-md p-3;
      }
    </style>
  </body>
</html>
